if [[ $TODO == *"Installation"* ]]; then

# Download
download https://homura.magzu.net/games/Pokemon_Uranium_v1.2.4_Installer.exe

# Prefix
prefix-message
echo -e "\e[40;38;5;32mSet prefix to Windows 10\e[30;48;5;82m\e[0m"
WINEPREFIX=$NDIR/Games/$INST winetricks win10

# Installer
installer-message
WINEPREFIX=$NDIR/Games/$INST wine $DDIR/Pokemon_Uranium_v1.2.4_Installer.exe
rm $DDIR/Pokemon_Uranium_v1.2.4_Installer.exe
WINEPREFIX="$NDIR/Games/$INST" winetricks sandbox
fi

if [[ $TODO == *"Launcher"* ]]; then
WINEPREFIX=$NDIR/Games/$LNCH wine "$NDIR/Games/$LNCH/drive_c/Program Files/Pokemon Uranium/Uranium.exe"
fi

if [[ $TODO == *"Uninstallation"* ]]; then
rm -d -r "$NDIR/Games/$UNST"
fi
