if [[ $TODO == *"Installation"* ]]; then

# Download
download http://tropixgame.com/Tropix2Installer.exe

# Prefix
prefix-message
echo -e "\e[40;38;5;32mSet prefix to Windows 10\e[30;48;5;82m\e[0m"
WINEPREFIX=$GDIR/$INST winetricks win10

# Installer
installer-message
WINEPREFIX=$GDIR/$INST wine "$DDIR/Tropix2Installer.exe"
rm $DDIR/Tropix2Installer.exe
WINEPREFIX="$GDIR/$INST" winetricks sandbox
fi

if [[ $TODO == *"Launcher"* ]]; then
WINEPREFIX=$GDIR/$LNCH wine "$GDIR/$LNCH/drive_c/Program Files/Tropix2/tpx2.exe"
fi

if [[ $TODO == *"Uninstallation"* ]]; then
rm -d -r "$GDIR/$UNST"
rm /usr/home/$USER/.local/share/applications/$UNST.desktop
fi


