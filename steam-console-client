if [[ $TODO == *"Installation"* ]]; then

# Download
mkdir -p $PDIR/$INST
mkdir -p $PDIR/$INST/SteamCMD
cd $PDIR/$INST/SteamCMD
download https://steamcdn-a.akamaihd.net/client/installer/steamcmd.zip

# Prefix
prefix-message
echo -e "\e[40;38;5;32mSet prefix to Windows 10\e[30;48;5;82m\e[0m"
WINEPREFIX=$PDIR/$INST winetricks win10

# Installer
installer-message
tar -xf steamcmd.zip
rm steamcmd.zip
WINEPREFIX="$PDIR/$INST" winetricks sandbox
fi

if [[ $TODO == *"Launcher"* ]]; then
WINEPREFIX=$PDIR/$LNCH WINEDEBUG=-all wineconsole $PDIR/$LNCH/SteamCMD/steamcmd.exe
fi

if [[ $TODO == *"Uninstallation"* ]]; then
rm -d -r $PDIR/$UNST
fi
