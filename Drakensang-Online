if [[ $TODO == *"Installation"* ]]; then

# Download
download https://drasaonline-481-dwl.bpsecure.com/applet/dro_setup.exe

# Prefix
prefix-message
echo -e "\e[40;38;5;32mSet prefix to Windows 10\e[30;48;5;82m\e[0m"
WINEPREFIX=$GDIR/$INST winetricks win10

# Installer
installer-message
WINEPREFIX="$GDIR/$INST" wine $DDIR/dro_setup.exe
rm $DDIR/dro_setup.exe
WINEPREFIX="$GDIR/$INST" winetricks sandbox
fi

if [[ $TODO == *"Launcher"* ]]; then
WINEPREFIX="$GDIR/$LNCH" wine "$GDIR/$LNCH/drive_c/Program Files/Drakensang Online/thinclient.exe"
fi

if [[ $TODO == *"Uninstallation"* ]]; then
rm -d -r "$GDIR/$UNST"
rm -d -r "/usr/home/$USER/.local/share/applications/wine/Programs/Drakensang Online"
rm "/usr/home/$USER/Desktop/Drakensang Online.desktop"
rm "/usr/home/$USER/Desktop/Drakensang Online.lnk"
fi

if [[ $OTR == *"Create a shortcut"* ]]; then
mkdir -p "/usr/home/$USER/.local/share/applications/wine/Programs/$CS"
if [ -f "/usr/home/$USER/.local/share/applications/wine/Programs/$CS/$CS.desktop" ]; then
rm "/usr/home/$USER/.local/share/applications/wine/Programs/$CS/$CS.desktop"
fi
echo "[Desktop Entry]
Name="$CS"
Exec=$NAME Launch '$CS'
Type=Application
StartupNotify=true
Icon=DA0A_icon" >> "/usr/home/$USER/.local/share/applications/wine/Programs/$CS/$CS.desktop"
fi
