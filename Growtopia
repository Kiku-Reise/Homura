if [[ $TODO == *"Installation"* ]]; then

# Download
download https://growtopiagame.com/Growtopia-Installer.exe

# Prefix
prefix-message
echo -e "\e[40;38;5;32mSet prefix to Windows 10\e[30;48;5;82m\e[0m"
WINEPREFIX=$GDIR/$INST winetricks win10

# Installer
installer-message
WINEPREFIX=$GDIR/$INST wine $DDIR/Growtopia-Installer.exe
rm $DDIR/Growtopia-Installer.exe
WINEPREFIX="$GDIR/$INST" winetricks sandbox
fi

if [[ $TODO == *"Launcher"* ]]; then
WINEPREFIX=$GDIR/$LNCH wine "$GDIR/$LNCH/drive_c/users/$USER/Local Settings/Application Data/Growtopia/Growtopia.exe"
fi

if [[ $TODO == *"Uninstallation"* ]]; then
rm -d -r "$GDIR/$UNST"
rm -d -r /usr/home/$USER/.local/share/applications/wine/Programs/$UNST
rm /usr/home/$USER/Desktop/$UNST.desktop
fi

if [[ $TODO == *"Update"* ]]; then
if [ ! -d "$GDIR/$UPDE" ]; then
info "You can not update something what is not installed :)"
else
cd $DDIR
fetch https://growtopiagame.com/Growtopia-Installer.exe
echo -e "\e[40;38;5;82mStarting installer\e[30;48;5;82m\e[0m"
WINEPREFIX=$GDIR/$UPDE wine $DDIR/Growtopia-Installer.exe
rm $DDIR/Growtopia-Installer.exe
fi
fi

if [[ $OTR == *"Create a shortcut"* ]]; then
mkdir -p /usr/home/$USER/.local/share/applications/wine/Programs/$CS
if [ -f "/usr/home/$USER/.local/share/applications/wine/Programs/$CS/$CS.desktop" ]; then
rm "/usr/home/$USER/.local/share/applications/wine/Programs/$CS/$CS.desktop"
fi
echo "[Desktop Entry]
Name=$CS
Exec=$NAME Launch $CS
Type=Application
StartupNotify=true
Icon=B09A_Growtopia.0" >> /usr/home/$USER/.local/share/applications/wine/Programs/$CS/$CS.desktop
fi
